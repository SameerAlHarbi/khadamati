{
  "name": "@abujude/khadamati",
  "version": "1.0.0",
  "description": "Shared typescript utilities",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SameerAlHarbi/khadamati.git"
  },
  "bugs": {
    "url": "https://github.com/SameerAlHarbi/khadamati/issues"
  },
  "homepage": "https://github.com/SameerAlHarbi/khadamati#readme",
  "keywords": [],
  "author": "Sameer Al Harbi",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "nodemon": "^2.0.16",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "import/prefer-default-export": "off",
      "@typescript-eslint/no-unused-vars": "warn"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "src/**/*.test.ts",
      "dist",
      "**/*.js"
    ]
  }
}
